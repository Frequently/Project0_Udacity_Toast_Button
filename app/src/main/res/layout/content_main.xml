<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.harshal.project0.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <com.andexert.library.RippleView
        android:id="@+id/Ripple"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        rv_centered="true">

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Popular Movies"
            android:id="@+id/button"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E3D49"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/Ripple2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ripple"
        android:layout_alignLeft="@+id/Ripple"
        android:layout_alignStart="@+id/Ripple"
        rv_centered="true">


        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Stock Hawk"
            android:id="@+id/button2"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E3D49"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/Ripple3"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ripple2"
        android:layout_alignLeft="@+id/Ripple2"
        android:layout_alignStart="@+id/Ripple2"
        rv_centered="true">

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Build it Bigger"
            android:id="@+id/button3"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E3D49"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2" />

    </com.andexert.library.RippleView>



    <com.andexert.library.RippleView
        android:id="@+id/Ripple4"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ripple3"
        android:layout_alignLeft="@+id/Ripple3"
        android:layout_alignStart="@+id/Ripple3"
        rv_centered="true">

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Make Your App Material "
            android:id="@+id/button4"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E3D49"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3" />


    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/Ripple5"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ripple4"
        android:layout_alignLeft="@+id/Ripple4"
        android:layout_alignStart="@+id/Ripple4"
        rv_centered="true">

        <Button
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Go Ubiquitous"
            android:id="@+id/button5"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E3D49"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/Ripple6"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ripple5"
        android:layout_alignLeft="@+id/Ripple5"
        android:layout_alignStart="@+id/Ripple5"
        rv_centered="true">

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Capstone"
                android:id="@+id/button6"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2E3D49"
                android:layout_below="@+id/button5"
                android:layout_alignLeft="@+id/button5"
                android:layout_alignStart="@+id/button5" />

    </com.andexert.library.RippleView>


</RelativeLayout>
